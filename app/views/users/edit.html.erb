<% provide :title, t(".title") %>
<% provide :button_text, t(".edit_btn") %>
<h1><%= t ".page_name" %></h1>
<div class="row">
  <div class="col-sm-12 col-md-6 offset-sm-0 offset-md-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change_avatar"), Settings.gravatar.email_url, target: "_blank" %>
    </div>
  </div>
</div>
